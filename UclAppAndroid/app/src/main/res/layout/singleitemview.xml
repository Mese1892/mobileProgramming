<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/teamlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teamlabel"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/managerlabel"
        android:layout_toEndOf="@+id/managerlabel"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/stadiumlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stadium"
        android:layout_alignBottom="@+id/stadium"
        android:text="@string/stadiumlabel"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team"
        android:layout_alignLeft="@+id/team"
        android:layout_alignStart="@+id/team"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/managerlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/managerlabel"
        android:textSize="24sp"
        android:layout_alignTop="@+id/manager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/stadium"
        android:layout_alignLeft="@+id/stadium"
        android:layout_alignStart="@+id/stadium" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manager"
        android:layout_marginTop="119dp"
        android:text="@string/save" />

    <Button
        android:id="@+id/DeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SaveButton"
        android:layout_alignBottom="@+id/SaveButton"
        android:layout_toEndOf="@+id/manager"
        android:layout_toRightOf="@+id/manager"
        android:text="@string/delete_team" />

    <Button
        android:id="@+id/UpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/DeleteButton"
        android:layout_alignBottom="@+id/DeleteButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="@string/update" />

    <TextView
        android:id="@+id/textViewBuget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manager"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:layout_toLeftOf="@+id/manager"
        android:layout_toStartOf="@+id/manager"
        android:text="@string/buget" />

    <EditText
        android:id="@+id/bugetEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewBuget"
        android:layout_toEndOf="@+id/textViewBuget"
        android:layout_toRightOf="@+id/textViewBuget" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SaveButton"
        android:layout_marginTop="9dp" />


</RelativeLayout>